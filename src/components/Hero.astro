<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-gray-50 to-white">
  <div class="container-width relative z-10">
    <div class="text-center max-w-5xl mx-auto">
      <h1 class="hero-headline text-5xl md:text-6xl lg:text-7xl font-semibold tracking-tightest text-gray-900 mb-6">
        Executive Excellence.<br />Delivered Daily.
      </h1>
      <p class="hero-subheadline text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
        Endeavor Agency provides world-class executive support services, empowering leaders to focus on what matters most.
      </p>
      <div class="hero-cta flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#services" class="btn-primary text-lg px-8 py-4">
          Explore Services
        </a>
        <a href="#contact" class="btn-secondary text-lg px-8 py-4">
          Get Started
        </a>
      </div>
      <p class="hero-trust mt-12 text-sm text-gray-500">
        Trusted by 500+ executives worldwide
      </p>
    </div>
  </div>
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-transparent opacity-50"></div>
  </div>
</section>

<style>
  .hero-headline,
  .hero-subheadline,
  .hero-cta,
  .hero-trust {
    opacity: 0;
    animation: fadeUp 0.8s ease-out forwards;
  }

  .hero-subheadline {
    animation-delay: 0.2s;
  }

  .hero-cta {
    animation-delay: 0.4s;
  }

  .hero-trust {
    animation-delay: 0.6s;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>