          <div class="animate-fade-in" style="animation-delay: 0.3s;">
            <div class="text-4xl font-bold text-primary-500 mb-2">150+</div>
            <div class="text-gray-600">Client Companies</div>
          </div>
        </div>
      </div>
    </section>
    
