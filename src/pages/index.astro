      ctaLink="/contact"
      backgroundImage="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&auto=format&fit=crop&w=2126&q=80"
    />
    
    <!-- Stats Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
          <div class="animate-fade-in">
            <div class="text-4xl font-bold text-primary-500 mb-2">500+</div>
            <div class="text-gray-600">Executive Placements</div>
          </div>
          <div class="animate-fade-in" style="animation-delay: 0.1s;">
            <div class="text-4xl font-bold text-primary-500 mb-2">95%</div>
            <div class="text-gray-600">Success Rate</div>
          </div>
          <div class="animate-fade-in" style="animation-delay: 0.2s;">
